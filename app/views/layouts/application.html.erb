<!DOCTYPE html>
<html>
  <head>
    <title>Undangapp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/ac49b349b5.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <div class="position-fixed w-100 top-0" style="z-index: 100">
      <header class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
          <div class="">
            <%= link_to("UndangApp", "/", class: "navbar-brand") %>
          </div>
          <div>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 d-flex flex-row">
              <% if @current_user %>
                <li class="nav-item">
                  <%= link_to("#{@current_user.name}", "/dashboard/#{@current_user.id}", class: "nav-link p-2") %>
                </li>
                <li class="nav-item">
                  <%= link_to("Acara", "/events/index", class: "nav-link p-2") %>
                </li>
                <li class="nav-item">
                  <%= link_to("Keluar", "/logout", class: "nav-link p-2") %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to("Masuk", "/login", class: "nav-link p-2") %>
                </li>
                <li class="nav-item">
                  <%= link_to("Daftar", "/signup", class: "nav-link p-2") %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </header>
      <% if flash[:notice] %>
        <div class="alert alert-info text-center" style="height: 50px">
          <div class="align-middle"><%= flash[:notice] %></div>
          <button type="button" class="btn-close position-absolute bottom-0 end-0 translate-middle" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% elsif flash[:success] %>
        <div class="alert alert-success text-center" style="height: 50px">
          <div class="align-middle"><%= flash[:success] %></div>
          <button type="button" class="btn-close position-absolute bottom-0 end-0 translate-middle" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% elsif flash[:warning] %>
        <div class="alert alert-warning text-center" style="height: 50px">
          <div class="align-middle"><%= flash[:warning] %></div>
          <button type="button" class="btn-close position-absolute bottom-0 end-0 translate-middle" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% elsif flash[:danger] %>
        <div class="alert alert-danger text-center" style="height: 50px">
          <div class="align-middle"><%= flash[:danger] %></div>
          <button type="button" class="btn-close position-absolute bottom-0 end-0 translate-middle" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    </div>
    <div style="height: 120px">
    </div>

    <div class="container-md">
      <%= yield %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>
